@using RunGroup.ViewModels
@model EditProfileViewModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="main-container">
    <section class="bg-white space-sm pb-4">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <h1 class="h2">Account Settings</h1>
                </div>
            </div>
        </div>
    </section>
    <section class="flush-with-above height-80 d-block">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="profile" role="tabpanel">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="media flex-wrap mb-0 align-items-center">
                                <img alt="Image" src="@Model.ProfileImageUrl" class="avatar avatar-lg mb-3 mb-md-0" width="200px" height="200px" />
                                <div class="media-body">
                                    <form method="POST" asp-action="EditProfile" enctype="multipart/form-data">
                                        <label asp-for="Image" class="custom-file mb-2" for="file2">
                                            <input asp-for="Image" type="file" id="file2" class="custom-file-input height-0" oninput="submitProfileImage()" />
                                            <button id="submit-image-button" type="submit" hidden></button>
                                        </label>
                                        <input asp-for="City" hidden />
                                        <input asp-for="State" hidden />
                                        <input asp-for="Pace" hidden />
                                        <input asp-for="Mileage" hidden />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-4">
                        <div class="col">
                            <h5>Profile Information</h5>
                            <div class="mb-3">
                                <h1 class="h2 mb-2">@Model.UserName</h1>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-8 order-md-1">
                            <form method="POST" asp-action="EditProfile" class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="Street">Street:</label>
                                        <input asp-for="Street" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="Street" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="City">City:</label>
                                        <input asp-for="City" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="State">State:</label>
                                        <input asp-for="State" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="State" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="Pace">Pace:</label>
                                        <input asp-for="Pace" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="Pace" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="Mileage">Mileage:</label>
                                        <input asp-for="Mileage" type="text" class="form-control form-control-lg" />
                                        <span asp-validation-for="Mileage" class="text-danger"></span>
                                    </div>
                                </div>
                                <br />
                                <div class="col-12" style="margin-top: 10px">
                                    <div class="form-group">
                                        <button class="btn btn-primary" type="submit">Save changes</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/js/common.js"></script>