@using RunGroopWebApp.ViewModels
@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<section class="space-lg" data-jarallax data-speed="0.2">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div>
                <h1 style="color: #02B875">RunGroup - Find a running group</h1>
                <span class="lead">
                    A community of devoted runners, passionate about running and life. Ready to find your accountability partner?
                </span>
                <br />
                <br />
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <img alt="Image" src="/img/slider.jpg" class="bg-image opacity-20" width="80%" height="400px" />
    </div>
</section>
<section>
    <div class="container" style="margin-top: 30px">
        @if (Model.Clubs == null)
        {
            <h1 class="fw-light">
                There are no running clubs in your area!
                <a asp-area="" asp-controller="Account" asp-action="Login">Login</a> and create one!
            </h1>
        }
        else
        {
            <div class="row justify-content-between">
                <h3>Running clubs near @Model.City, @Model.State</h3>
            </div>
            <div class="col-auto">
                <a asp-area="" asp-controller="Club" asp-action="Index" class="btn btn-outline-primary">View all</a>
            </div>
            <br />
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model.Clubs)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <a asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                <img class="bd-placeholder-img card-img-top" src=@item.Image width="100%" height="225" />
                            </a>
                            <div class="card-body">
                                <p class="card-text">@item.Title</p>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    </div>
                                    <small class="text-body-secondary">@item.ClubCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>