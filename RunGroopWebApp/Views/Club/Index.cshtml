@model IEnumerable<Club>
@{
    ViewData["Title"] = "Club";
}

<a asp-controller="Club" asp-action="Create" class="btn btn-primary my-2">Create Club</a>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                <a asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                    <img class="bd-placeholder-img card-img-top" src=@item.Image width="100%" height="225" />
                </a>
                <div class="card-body">
                    <p class="card-text">@item.Title</p>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                            <button class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                        <small class="text-body-secondary">@item.ClubCategory</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>